---
import experience from '../../../src/config/experience.json'
---

<section id="section-experience">

    <h1 class="text-center font-bold text-5xl my-10">Experience</h1>

    <div class="grid md:grid-cols-3 gap-4 p-4">
        {
            experience.map(exp => (
                <div class="bg-slate-800 p-10 rounded-xl">
                    <h2 class="text-2xl font-bold m-y-4 text-center">{exp.title}</h2>
                    <h3 class="text-1xl font-bold m-y-4 text-center p-3 text-zinc-400">{exp.company}</h3>
                    <p class="text-pretty">{exp.description}</p>
                </div>
            ))
        }
    </div>

</section>